{
  "name": "remix-typescript-tailwind-quickstart",
  "private": true,
  "type": "module",
  "description": "Get started on Remix with TypeScript and Tailwind CSS in seconds.",
  "license": "Unlicense",
  "sideEffects": false,
  "scripts": {
    "build": "cross-env NODE_ENV=production remix build",
    "dev": "cross-env NODE_ENV=development remix dev",
    "format": "prettier --write \"./app/**/*.{js,jsx,ts,tsx}\" \"./*.{js,ts}\"",
    "lint": "eslint \"app/**/*.{ts,tsx}\"",
    "start": "cross-env NODE_ENV=production remix-serve build",
    "type-check": "tsc",
    "validate": "yarn lint && yarn type-check"
  },
  "dependencies": {
    "@remix-run/dev": "^2.11.2",
    "@remix-run/react": "^2.11.2",
    "@remix-run/serve": "^2.11.2",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.41",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remix": "^1.19.3",
    "tailwindcss": "^3.4.10"
  },
  "devDependencies": {
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1",
    "stylelint": "^14.5.3",
    "stylelint-config-recommended": "^7.0.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=14"
  }
}
